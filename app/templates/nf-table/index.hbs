<h2>nf-table</h2>

<style>
	.test {
		background: lime;
	}

	.small-column {
		width: 100px;
	}

	.big-column {
		width: 200px;
	}
</style>

{{#nf-table rows=myData sortMultiple=1 scrollable=1}}
	{{#nf-column sortBy="row.blah" class="small-column"}}	
		{{#nf-header class="test"}}
			Blah <div class="nf-sort-arrow"></div>
		{{/nf-header}}
		
		{{#nf-cell}}
			{{row.blah}}
		{{/nf-cell}}
	{{/nf-column}}

	{{#nf-column sortBy="row.foo" class="big-column"}}
		{{#nf-header}}
			Foo <div class="nf-sort-arrow"></div>
		{{/nf-header}}
		
		{{#nf-cell}}
			<a href="#" {{action 'fooCellClicked'}}>test</a>{{row.foo}}
		{{/nf-cell}}
	{{/nf-column}}
	
	{{#nf-column sortBy="row.bar" sortNatural=1 class="small-column"}}	
		{{#nf-header}}
			Bar <div class="nf-sort-arrow"></div>
		{{/nf-header}}

		{{#nf-cell}}
			{{row.bar}}
		{{/nf-cell}} 
	{{/nf-column}}
{{/nf-table}}
