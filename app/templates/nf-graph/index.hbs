<h1>Graph - Basics</h1>

<label>Graph Width: {{input type="range" min="10" max="1000" value=graphWidth}}</label><output>{{graphWidth}}px</output><br/>
<label>Graph1 Diff A: {{input type="range" min="0" max="1000" value=diffA}}</label><output>{{diffA}}</output><br/>
<label>Graph1 Diff B: {{input type="range" min="0" max="1000" value=diffB}}</label><output>{{diffB}}</output><br/>
<label>Multiplier Y: {{input type="range" min="0" step=".01" max="2" value=multiY}}</label><output>{{multiY}}</output><br/>
<output>{{graphWidth}}px</output>

{{#nf-graph xLink=groupX yLink=groupY selected=selectedThings 
	width=graphWidth height="300" showFrets="true" showLanes="true" paddingTop=50
	yScaleType="power"}}

	{{#nf-graph-content}}
		{{#nf-gg scaleZoomX=multiY scaleZoomY=multiY}}
			{{nf-area selectable=1 selected=fooSelected data=lineData 
				trackedDataKey="fooData"
				didTrack="setTrackedData"
				trackingMode="snap-last"}}
			{{nf-vertical-line x=fooData.x}}
			{{nf-horizontal-line y=fooData.y}}	

			{{nf-crosshair}}
			{{nf-selection-box xMin=10 xMax=50 yMin=diffA yMax=diffB}}
		{{/nf-gg}}


		{{!-- {{#nf-plots data=lineData action="showData" scaleZoomY=multiY}}
			<image xlink:href="assets/images/emberjs-tomster.png" 
				x="0" y="0" width="40" height="40" transform="translate(-20 -20)"/>
		{{/nf-plots}} --}}


		{{#if shownData}}
			{{#nf-plot x=shownData.x y=shownData.y}}
				<foreignObject width="150" height="50">
					<div style="box-sizing: border-box; background-color: white; padding: 10px; border: 1px solid gray; border-radius: 8px">
						{{shownData.y}}
					</div>
				</foreignObject>
			{{/nf-plot}}
		{{/if}}

	{{/nf-graph-content}}

	{{#nf-y-diff a=diffA b=diffB}}
		<text {{action 'test'}}>500</text>
	{{/nf-y-diff}}

	{{#nf-x-axis scaleZoomX=multiY}}
		<text>{{tick.value}}</text>
	{{/nf-x-axis}}

	{{#nf-y-axis scaleZoomY=multiY orient="right"}}
		<text>{{tick.value}}</text>
	{{/nf-y-axis}}

{{/nf-graph}}

<div>
	fooData: {{fooData.x}}, {{fooData.y}} <br>
	fooHovered: {{fooHovered.x}}, {{fooHovered.y}} <br>
</div>

<style>
	.area3 .area {
		fill: blue;
	}
	.area2 .area {
		fill: lime;
	}
	.area1 .area {
		fill: red;
	}
</style>

{{#nf-graph  xLink=groupX selectMultiple=1
	width=graphWidth height="300" showFrets="true" showLanes="true" paddingTop=50}}

	{{#nf-graph-content}}
		{{#nf-area-stack}}
			{{nf-area class="area3" selectable=1 selected=fooSelected interpolator="linear" data=area3  trackingMode="snap-last"}}
			{{nf-area class="area2" selectable=1 interpolator="linear" data=area2  trackingMode="snap-last"}}
			{{nf-area class="area1" selectable=1 interpolator="linear" data=area1  trackingMode="snap-last"}}
		{{/nf-area-stack}}
	{{/nf-graph-content}}

	{{#nf-x-axis}}
		<text>{{tick.value}}</text>
	{{/nf-x-axis}}

	{{#nf-y-axis orient="right"}}
		<text>{{tick.value}}</text>
	{{/nf-y-axis}}

{{/nf-graph}}

<div>
	<span>Tracked Data</span>
	<output>{{tracked2.y}}</output>
</div>

<button {{action 'appendAreaData' area1}}>area1</button>
<button {{action 'appendAreaData' area2}}>area2</button>
<button {{action 'appendAreaData' area3}}>area3</button>