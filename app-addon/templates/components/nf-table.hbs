{{#if hasRendered}}
  {{#if isStandardTable}}
  <thead>
    <tr>
      {{#each column in columns}}
        <th {{action 'sort' column}} {{bind-attr class="column.sortClass"}}>
          {{view Ember.View tagName="div" controller=parentController template=column.header.template}}
        </th>
      {{/each}}
    </tr>
  </thead>

  <tbody>
    {{#each row in sortedRows}}
      <tr>
        {{#each column in columns}}
          {{view Ember.View tagName="td" controller=parentController template=column.cell.template}}
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
  {{/if}}

  {{#if isGroupedTable}}
    <thead>
      <tr>
        {{#each column in columns}}
          <th {{action 'sort' column}} {{bind-attr class="column.sortClass"}}>
            {{view Ember.View tagName="div" controller=parentController template=column.header.template}}
          </th>
        {{/each}}
      </tr>
    </thead>

    <tbody>
      {{#each groupRow in sortedGroups}}
        <tr class="nf-table-group">
          {{#each column in columns}}
            {{view Ember.View tagName="td" controller=parentController template=column.cell.template}}
          {{/each}}
        </tr>
        {{#each row in groupRow}}
          <tr class="nf-table-group-child">
            {{#each column in group.columns}}
              {{view Ember.View tagName="td" controller=parentController template=column.cell.template}}
            {{/each}}
          </tr>
        {{/each}}
      {{/each}}
    </tbody>
  {{/if}}
{{/if}}

{{yield}}  